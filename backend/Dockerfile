#Instalar node version 20
FROM node:20

#EJECUTAR LOS SIGUIENTES COMANDOS
RUN mkdir -p /user/src/app

#MOVERME A LA CARPETA QUE SE CREO
WORKDIR /user/src/app

#COPIAR EL PACKAGE.JSON Y PACKAGE-LOCK.JSON
COPY package*.json ./

#EJECUTA RUN NPM INSTALL
RUN npm install

#COPIAR TODOS LOS DIRECTORIOS DEL BACKEND
COPY . .

#PUERTO DE EJECUCION
EXPOSE 5000

#SCRIPT PARA INICIAR EL SERVIDOR
CMD ["npm", "run", "dev"]